pipeline {
    agent any

    // Environment variables
    environment {
        EXAMPLE = 'TEST'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from the GitHub repository
                git url: 'https://github.com/dodyg/practical-aspnetcore.git', branch: 'net6.0'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the .NET project...'

                // Show .NET version
                sh 'dotnet --version'

                // Restore dependencies
                sh 'dotnet restore projects/testing/nunit-1'

                // Build the project
                sh 'dotnet build projects/testing/nunit-1 --configuration Release --no-restore'
            }
        }

        stage('Test') {
            steps {
                echo 'Running unit tests...'
                // Run NUnit tests
                sh 'dotnet test projects/testing/nunit-1 --configuration Release --no-build --logger "console;verbosity=detailed"'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'

                // Create publish directory
                sh 'mkdir -p publish'

                // Publish the application
                sh 'dotnet publish projects/testing/nunit-1 --configuration Release --output publish --no-build'

                // Archive the artifacts
                // archiveArtifacts artifacts: 'publish/**', fingerprint: true

                echo 'Deployment completed successfully'
            }
        }
    }

    // post {
    //     success {
    //         echo 'Pipeline completed successfully!'
    //     }
    //     failure {
    //         echo 'Pipeline failed!'
    //     }
    //     // always {
    //         // Clean up workspace
    //         // cleanWs()
    //     // }
    // }
}
